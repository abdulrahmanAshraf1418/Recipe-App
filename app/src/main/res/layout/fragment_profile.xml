<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFF2F2">

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, My Chef"
        android:textColor="@color/primaryColor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chef_logo1"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_border"
            android:padding="4dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/guest_buttons"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:text="Login to Access All Features"
            android:textColor="@color/primaryRed"
            android:visibility="gone"
            app:backgroundTint="@android:color/white"
            app:cornerRadius="12dp"
            app:strokeColor="@color/primaryRed"
            app:strokeWidth="2dp"
            app:textAllCaps="false" />

        <LinearLayout
            android:id="@+id/User_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFavorites"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Favorite Meals"
                android:textColor="@color/primaryRed"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="12dp"
                app:strokeColor="@color/primaryRed"
                app:strokeWidth="2dp"
                app:textAllCaps="false" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/primaryRed"
                android:padding="12dp"
                android:text="Logout"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/scheduled_meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/primaryRed"
                android:padding="12dp"
                android:text="Scheduled Meals"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>