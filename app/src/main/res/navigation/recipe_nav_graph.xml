<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.recipeapp.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.recipeapp.ui.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_mealsFragment"
            app:destination="@id/mealsFragment"
            app:popUpTo="@id/searchFragment"
            app:popUpToInclusive="false"/>
    </fragment>

    <fragment
        android:id="@+id/mealsFragment"
        android:name="com.example.recipeapp.ui.MealsFragment"
        android:label="Meals"
        tools:layout="@layout/fragment_meals">

        <argument
            android:name="filterType"
            app:argType="string" />
        <argument
            android:name="filterValue"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.recipeapp.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.recipeapp.ui.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.recipeapp.ui.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.recipeapp.ui.DetailsFragment"
        android:label="Details">
        <argument
            android:name="mealId"
            app:argType="string"
            app:nullable="true"/>
    </fragment>



</navigation>
